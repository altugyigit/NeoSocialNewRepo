@model NeoSocial.ViewModels.RegisterModel

@{
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html>
<head>
<title>Kayıt</title>
	<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7; IE=EmulateIE9">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no"/>

    
</head>
<body>
     @using (Html.BeginForm("Register","Register",FormMethod.Post)){
         
         @Html.AntiForgeryToken();
          
          
<div class="container">
			<header>
            </header>       
     
      <div  class="form">
    		<form id="contactform"> 
    			 @Html.Label("Name")<br /><br />

                 @Html.TextBoxFor(Model=>Model.Name, new {@class="form-control" } )<br />
  
                @Html.Label("Surname")<br /><br />

                 @Html.TextBoxFor(Model=>Model.Surname, new {@class="form-control" } )<br />
    			
    			 @Html.Label("Email")<br /><br />

                 @Html.TextBoxFor(Model=>Model.Email, new {@class="form-control", type = "email" })<br />
                 
               @Html.Label("User Name")<br /><br />

                 @Html.TextBoxFor(Model=>Model.UserName, new {@class="form-control" } )<br />
    			
                @Html.Label("Password")<br /><br />

                 @Html.TextBoxFor(Model=>Model.Password, new {@class="form-control",type="password" } )<br />


                   @Html.Label("Again Password")<br /><br />

                 @Html.TextBox("repassword","", new {@class="form-control",type="password" })<br />


                 @Html.Label("Birth Date")<br /><br />

                 @Html.TextBoxFor(Model=>Model.BirthDate, new { @class="form-control",type="date" })<br />
                

                 @Html.Label("Gender")<br /><br />
             @Html.DropDownListFor(Model=>Model.Gender,new SelectList( new List<Object>{ 
                       new { value = 0 , text = "Famale"  },
                       new { value = 1 , text = "Male" }
                      
                    },
                  "value",
                  "text",
                     2),new { @class="form-control"})<br /><br />


            
               @Html.Label("Country")<br /><br />
               @Html.DropDownListFor(Model=>Model.CountryID,new SelectList((System.Collections.IEnumerable) ViewData["country"], "CountryID", "CountryName"),new { @class="form-control"})<br /><br />
               
               
                 
                
                <input class="buttom" name="submit" id="submit" tabindex="5" value="Sign Up" type="submit"  > 	 

                @if(TempData["true"]!=null) {
                    <script type="text/javascript">
                        alert("@TempData["true"]");

                      </script>
                 
                }
                @if(TempData["false"]!=null) {
                <script type="text/javascript">
                    alert("@TempData["false"]");
                      </script>
                }
   </form> 
     
             
                                  

</div>
    </div>
     }
    
    

</body>
</html>
